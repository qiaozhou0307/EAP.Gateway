{
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Database=eap_gateway;Username=eap_user;Password=eap_password;Include Error Detail=true",
    "Redis": "localhost:6379"
  },
  "DicingMachines": {
    "Devices": [
      {
        "Name": "裂片机#1",
        "IpAddress": "192.168.1.101",
        "Port": 5000,
        "ExpectedMachineNumber": "001",
        "Description": "主线裂片机设备",
        "EnableAutoReconnect": true,
        "HeartbeatInterval": 30,
        "EnableDataCollection": true,
        "DataCollectionInterval": 1000,
        "ConnectionTimeout": "00:00:30"
      },
      {
        "Name": "裂片机#2",
        "IpAddress": "192.168.1.102",
        "Port": 5000,
        "ExpectedMachineNumber": "002",
        "Description": "备用裂片机设备",
        "EnableAutoReconnect": true,
        "HeartbeatInterval": 30,
        "EnableDataCollection": true,
        "DataCollectionInterval": 1000,
        "ConnectionTimeout": "00:00:30"
      }
    ],
    "GlobalSettings": {
      "MaxConcurrentConnections": 5,
      "DefaultConnectionTimeout": "00:00:30",
      "AutoReconnectEnabled": true,
      "MonitoringInterval": "00:01:00",
      "HealthCheckInterval": "00:02:00"
    }
  },
  "Kafka": {
    "BootstrapServers": "localhost:9092",
    "TraceDataTopic": "eap.trace_data",
    "EquipmentEventsTopic": "eap.equipment_events",
    "AlarmEventsTopic": "eap.alarm_events"
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "Microsoft.EntityFrameworkCore": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {SourceContext} {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/eap-gateway-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7,
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {Level:u3}] {SourceContext} {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  },
  "AllowedHosts": "*"
}
